# Copy this file to terraform.tfvars and fill in your values
project_id = "your-gcp-project-id"
region     = "us-central1"
zones      = ["us-central1-a"]

environment  = "dev"
service_name = "kubeflow"

# Cost optimization: Spot VMs are 60-91% cheaper but can be preempted
use_spot_instances = true

# Single node to start, scale up as needed
min_node_count     = 1
max_node_count     = 3
initial_node_count = 1
machine_type       = "e2-standard-4"
disk_size_gb       = 50

# Restrict API access to your IP for security (recommended)
# master_authorized_networks = [
#   {
#     cidr_block   = "YOUR_IP/32"
#     display_name = "my-ip"
#   }
# ]

# Enable when ready to deploy Kubeflow
create_kubeflow_sa = false

# Kubeflow installation
install_kubeflow     = true
kubeflow_version     = "v1.11-branch"  # or "v1.10-branch", "v1.11.0" for a pinned release
istio_version        = "1.24.3"
cert_manager_version = "v1.17.2"

# Component toggles â€” disable what you don't need to save resources
enable_pipelines         = true   # ML workflow orchestration
enable_notebooks         = true   # Jupyter notebooks
enable_katib             = true   # Hyperparameter tuning
enable_kserve            = false  # Model serving (adds Knative overhead)
enable_training_operator = true   # Distributed training (PyTorch, TF, etc.)
enable_tensorboard       = true   # Training visualization
enable_volumes_web_app   = true   # PVC management UI
enable_knative_eventing  = false  # Event-driven workflows (not needed for most setups)
enable_spark_operator    = false  # Apache Spark on K8s
enable_user_namespace    = true   # Default user profile (user@example.com)
